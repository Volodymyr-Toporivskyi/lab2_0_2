@{
    ViewBag.Title = "Home Page";
}
<head>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var s = false;
            $(".calc-number").click(function () {
                var StrNumber = $(this).text();
                if (s) {
                    $("#txtfirstNum").val('');
                    s = false;
                }
                if ($("#txtfirstNum").val() == "0")
                    $("#txtfirstNum").val("")
                $("#txtfirstNum").val($("#txtfirstNum").val() + StrNumber);

            });
            $(".calc").click(function () {
                var znak = $(this).text();
                $('#znak').val(znak);
                if ($("#txtfirstNum").val() != "")
                    $('#txtsecondNum').val($("#txtfirstNum").val());
                s = true;

            });
        });

    </script>
</head>
<body>

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <br />
        <input type="text" name="firstNum" id="txtfirstNum" />
        <br />
        <input type="hidden" name="secondNum" id="txtsecondNum" value="@ViewBag.secondNum" />
        <input type="hidden" name="calc" id="znak" value="@ViewBag.znak" />

        <br />
        <h3> @ViewBag.Result </h3>
        <br />
        <button type="button" class="calc">+</button>
        <button type="button" class="calc">-</button>
        <button type="button" class="calc">*</button>
        <button type="button" class="calc">/</button>
        <input type="submit" name="qq" onclick="btn" value="=" />
        <br />
    }

    <button class="calc-number">1</button>
    <button class="calc-number">2</button>
    <button class="calc-number">3</button>
    <br />
    <button class="calc-number">4</button>
    <button class="calc-number">5</button>
    <button class="calc-number">6</button>
    <br />
    <button class="calc-number">7</button>
    <button class="calc-number">8</button>
    <button class="calc-number">9</button>
    <br />
    <button class="calc-number">0</button>

</body>